    private void jButtonNovoActionPerformed(java.awt.event.ActionEvent evt) {                                            
         habilitarTexto();
         habilitarBotoes();
    }                                           

    private void jButtonSalvarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        if(jPasswordFieldSenha.getText().equals(jPasswordFieldSenha2.getText())){
            mod.setUsuario(jTextFieldUsu.getText());
            mod.setSenha(jPasswordFieldSenha.getText());
            mod.setTipo((String) jComboBox1.getSelectedItem());
            control.Salvar(mod);  
            
        }else{
            JOptionPane.showMessageDialog(null, "As senhas não correspondem");
        }
       desabilitaTexto();
       desabilitarBotoes();
       limparTexto();
        
    }                                             

    private void jButtonCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                                
        limparTexto();
        desabilitaTexto();
        desabilitarBotoes();
    }                                               

    public void habilitarTexto(){
        jTextFieldUsu.setEnabled(true);
        jPasswordFieldSenha.setEnabled(true);
        jPasswordFieldSenha2.setEnabled(true);
        jComboBox1.setEnabled(true); 
    }
    public void desabilitaTexto(){
        jTextFieldUsu.setEnabled(false);
        jPasswordFieldSenha.setEnabled(false);
        jPasswordFieldSenha2.setEnabled(false);
        jComboBox1.setEnabled(false);
    }
    public void habilitarBotoes(){
        jButtonCancelar.setEnabled(true);
        jButtonSalvar.setEnabled(true);
        jButtonNovo.setEnabled(false);
    }
    public void desabilitarBotoes(){
        jButtonCancelar.setEnabled(false);
        jButtonSalvar.setEnabled(false);
        jButtonNovo.setEnabled(true);
    }
    public void limparTexto(){
        jTextFieldUsu.setText("");
        jPasswordFieldSenha.setText("");
        jPasswordFieldSenha2.setText("");
    }
    
    
